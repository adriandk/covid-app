<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EduActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/back_symptoms"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/arrow_back"
            android:backgroundTint="@android:color/black" />

        <TextView
            android:layout_toEndOf="@id/back_symptoms"
            android:id="@+id/text1"
            android:layout_marginTop="2dp"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Symptoms and Requirement"
            android:textColor="@android:color/black"
            android:fontFamily="@font/ptsansreg"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text2"
            android:layout_below="@id/text1"
            android:layout_marginTop="38dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Requirement"
            android:textColor="@android:color/black"
            android:fontFamily="@font/ptsansbold"
            android:textSize="28sp" />

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_below="@id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <androidx.cardview.widget.CardView
                android:layout_margin="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_margin="8dp"
                        android:layout_gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:src="@drawable/masker"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY" />

                    <TextView
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Mask"
                        android:fontFamily="@font/ptsansreg"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_margin="8dp"
                        android:layout_gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="40dp"
                        android:src="@drawable/sabun"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Mask"
                        android:fontFamily="@font/ptsansreg"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_margin="8dp"
                        android:layout_gravity="center"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:src="@drawable/gloves"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Mask"
                        android:fontFamily="@font/ptsansreg"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>