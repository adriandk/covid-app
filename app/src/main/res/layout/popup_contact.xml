<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="280dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="14dp">

            <ImageButton
                android:id="@+id/close_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/closebutton" />

            <ImageView
                android:layout_below="@id/close_button"
                android:id="@+id/imagepopup"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/popup"
                android:scaleType="fitXY"
                android:adjustViewBounds="true" />

            <TextView
                android:layout_below="@id/imagepopup"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textAlignment="textStart"
                android:text="Hi, I'm Adrian Daniel Kristanto a junior android programmer"
                android:textSize="16dp"
                android:fontFamily="@font/poppinsreg"
                android:textColor="@android:color/black" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>